<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_blue"
        android:orientation="vertical"
        tools:context=".telaCadastroDiarioAlimentacao">

        <TextView
            android:id="@+id/tv_diaTurnoDiarioEt02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:text="@string/alimentacao"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_refeicao"
            style="@style/Edit_text"
            android:hint="@string/refeicao"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_lancheDiario"
            style="@style/Edit_text"
            android:hint="@string/lanche"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_outrosDiario"
            style="@style/Edit_text"
            android:hint="@string/outro"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_obsDiario"
            style="@style/Edit_text"
            android:hint="@string/obs"
            android:inputType="textPersonName" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_salvarAlimentacao"
            style="@style/button"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:text="@string/salvar" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>