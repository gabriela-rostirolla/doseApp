<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_blue"
        android:orientation="vertical"
        tools:context=".telaCadastroConsulta">

        <EditText
            android:id="@+id/et_nomeConsulta"
            style="@style/Edit_text"
            android:hint="@string/nome"
            android:inputType="textCapWords"
            android:maxLength="250" />

        <EditText
            android:id="@+id/et_profissionalConsulta"
            style="@style/Edit_text"
            android:hint="@string/profissional"
            android:inputType="textCapWords"
            android:maxLength="250" />

        <EditText
            android:id="@+id/et_enderecoConsulta"
            style="@style/Edit_text"
            android:hint="@string/endereco"
            android:inputType="textCapWords"
            android:maxLength="250" />

        <EditText
            android:id="@+id/et_telefoneConsulta"
            style="@style/Edit_text"
            android:hint="@string/telefone"
            android:inputType="phone"
            android:maxLength="11" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_dataConsul"
                style="@style/Edit_text"
                android:layout_width="250dp"
                android:layout_marginLeft="20dp"
                android:enabled="false"
                android:hint="@string/data"
                android:maxLength="10" />

            <ImageButton
                android:id="@+id/imgBtn_dataConsul"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/borda"
                android:src="@drawable/ic_calendar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_horaConsulta"
                style="@style/Edit_text"
                android:layout_width="250dp"
                android:layout_marginLeft="20dp"
                android:hint="@string/horario"
                android:inputType="time"
                android:enabled="false"
                android:maxLength="4" />

            <ImageButton
                android:id="@+id/imgBtn_horarioConsul"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/borda"
                android:src="@drawable/ic_watch" />

        </LinearLayout>

        <Switch
            android:id="@+id/swt_lembreConculta"
            style="@style/Switch" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_salvarConsulta"
            style="@style/button"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:text="@string/salvar" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>